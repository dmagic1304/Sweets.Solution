@{
  Layout = "_Layout";
}

@using Sweets.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Flavor flavor in Model)
    {
      <li>@Html.ActionLink($"{flavor.Taste}", "Details", new { id = flavor.FlavorId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new flavor", "Create")</p>